{
  "name": "@aglabo/agla-logger-core",
  "_comment": "@(#) AgLogger: reusable structured logger supporting log levels, formatting, and runtime context injection",
  "version": "0.1.0",
  "description": "Structured logger with log levels, formatting, and contextual metadata support",
  "author": "atsushifx <https://github.com/atsushifx>",
  "license": "MIT",
  "type": "module",
  "main": "./module/index.js",
  "types": "./module/index.d.ts",
  "exports": {
    ".": {
      "import": "./module/index.js",
      "types": "./module/index.d.ts",
      "require": "./lib/index.cjs"
    }
  },
  "files": [
    "lib",
    "module"
  ],
  "scripts": {
    "prepublishOnly": "pnpm run check:types && pnpm run lint:all && pnpm run lint:secrets && pnpm run check:dprint && pnpm run build",
    "build": "concurrently \"pnpm run build:cjs\" \"pnpm run build:esm\" \"pnpm run build:types\"",
    "build:cjs": "tsup --config ./configs/tsup.config.cjs.ts",
    "build:esm": "tsup --config ./configs/tsup.config.esm.ts",
    "build:types": "tsc -p ./tsconfig.build.json",
    "clean": "rimraf lib maps module .cache",
    "format:dprint": "dprint fmt",
    "check:dprint": "dprint check",
    "check:types": "tsc --noEmit --incremental",
    "check:spells": "cspell --config .vscode/cspell.json --cache --cache-location .cache/cspell/cSpellCache",
    "lint": "pnpm exec eslint --config ./configs/eslint.config.js --cache --cache-location .cache/eslint-cache/esLintCache ",
    "lint:types": "pnpm exec eslint --config ./configs/eslint.config.typed.js --cache --cache-location .cache/eslint-cache/esLintTypedCache",
    "lint:all": "concurrently \"pnpm run lint\" \"pnpm run lint:types\"",
    "lint:fix": "pnpm run lint --fix",
    "lint:secrets": "secretlint --secretlintrc ./configs/secretlint.config.yaml --secretlintignore .gitignore --maskSecrets **/*",
    "test:all": "concurrently \"pnpm run test:develop\" \"pnpm run test:functional\" \"pnpm run test:ci\" \"pnpm run test:e2e\"",
    "test:develop": "pnpm exec vitest run --config ./configs/vitest.config.unit.ts",
    "test:functional": "pnpm exec vitest run --config ./configs/vitest.config.functional.ts",
    "test:ci": "pnpm exec vitest run --config ./configs/vitest.config.integration.ts",
    "test:e2e": "pnpm exec vitest run --config ./configs/vitest.config.e2e.ts",
    "test:coverage:unit": "pnpm exec vitest run --coverage --config ./configs/vitest.config.unit.ts",
    "test:coverage:functional": "pnpm exec vitest run --coverage --config ./configs/vitest.config.functional.ts",
    "test:coverage:integration": "pnpm exec vitest run --coverage --config ./configs/vitest.config.integration.ts",
    "test:coverage:e2e": "pnpm exec vitest run --coverage --config ./configs/vitest.config.e2e.ts",
    "test:coverage:all": "concurrently \"pnpm run test:coverage:unit\" \"pnpm run test:coverage:functional\" \"pnpm run test:coverage:integration\" \"pnpm run test:coverage:e2e\"",
    "sync:configs": "bash ../../../scripts/sync-configs.sh . "
  },
  "dependencies": {
    "@aglabo/agla-error-core": "workspace:*"
  }
}
