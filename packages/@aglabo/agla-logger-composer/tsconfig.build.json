{
  "extends": "../../../base/configs/tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "shared/**/*.ts"
  ],
  "exclude": [
    "tests/**/*.ts",
    "**/__tests__/**/*.ts"
  ],
  "compilerOptions": {
    "declarationDir": "./maps",
    "outDir": "./maps",
    "rootDir": "./",
    "paths": {
      "#/*": [
        "./src/*",
        "./*"
      ],
      "#shared/*": [
        "./shared/*"
      ]
    },
    "incremental": true,
    "tsBuildInfoFile": ".cache/tsbuild-cache/tsBuildInfo.json"
  }
}
