{
  "name": "@aglabo/agla-error",
  "_comment": "@(#) AglaError: standardized error handling with AglaError class and ErrorSeverity enum",
  "version": "0.1.0",
  "description": "Aggregator for agla-error-core (re-export only)",
  "author": "atsushifx <https://github.com/atsushifx>",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "README.ja.md"
  ],
  "sideEffects": false,
  "scripts": {
    "prepublishOnly": "pnpm run build && pnpm run check:dprint && pnpm run lint:secrets",
    "prepack": "cp ../../../README.* .",
    "build": "tsup --config ./configs/tsup.config.esm.ts",
    "clean": "rimraf dist .cache",
    "format:dprint": "dprint fmt",
    "check:dprint": "dprint check",
    "lint:secrets": "secretlint --secretlintrc ./configs/secretlint.config.yaml \"**/*\"",
    "commitlint": "commitlint --config ./configs/commitlint.config.ts --edit"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@aglabo/agla-error-core": "workspace:*"
  }
}
