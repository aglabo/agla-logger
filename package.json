{
  "name": "@aglabo-monorepo/ag-logger",
  "_comment": "@(#) : monorepo for @aglabo/ag-logger",
  "private": true,
  "version": "0.0.1",
  "description": "lightweight & pluggable logger for TypeScript",
  "author": "atsushifx <https://github.com/atsushifx>",
  "license": "MIT",
  "type": "module",
  "keywords": [],
  "packageManager": "pnpm@10.17.1",
  "engines": {
    "node": ">=20",
    "pnpm:": ">=10"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "lefthook install",
    "build": "pnpm -r run build && echo 'build completed successfully'",
    "build:esm": "pnpm -r run build:esm",
    "build:cjs": "pnpm -r run build:cjs",
    "build:types": "pnpm -r run build:types",
    "clean": "pnpm -r run clean",
    "format:dprint": "dprint fmt",
    "check:dprint": "dprint check",
    "check:types": "pnpm -r run check:types",
    "check:spells": "cspell  --config .vscode/cspell.json --cache --cache-location .cache/cspell/cSpellCache",
    "lint": "pnpm -r run lint",
    "lint:types": "pnpm -r run lint:types",
    "lint:all": "pnpm run lint && pnpm run lint:types",
    "lint-all": "pnpm exec eslint --config ./configs/eslint.config.all.js --cache --cache-location .cache/eslint-cache/esLintCache",
    "lint-all:types": "pnpm exec eslint --config ./configs/eslint.config.all.typed.js  --cache --cache-location .cache/eslint-cache/esLintCache",
    "lint:filenames": "pnpm exec ls-lint --config ./configs/ls-lint.yaml ",
    "lint:text": "textlint --config ./configs/textlintrc.yaml --cache --cache-location .cache/textlint-cache/textlintCache ",
    "lint:markdown": "markdownlint-cli2 --config ./configs/.markdownlint.yaml ",
    "lint:secrets": "secretlint --secretlintrc ./configs/secretlint.config.yaml --secretlintignore .gitignore --maskSecrets **/*",
    "test:all": "pnpm -r run test:all && echo `All tests passed`",
    "test:coverage": "pnpm -r run test:coverage:all",
    "test:coverage:unit": "pnpm -r run test:coverage:unit",
    "test:coverage:functional": "pnpm -r run test:coverage:functional",
    "test:coverage:integration": "pnpm -r run test:coverage:integration",
    "test:coverage:e2e": "pnpm -r run test:coverage:e2e",
    "coverage:analyze": "node scripts/analyze-coverage.js",
    "coverage:report": "pnpm run test:coverage && pnpm run coverage:analyze",
    "new:doc": "tsx ./scripts/new-doc.ts",
    "lint:docs": "tsx ./scripts/check-doc-frontmatter.ts",
    "sync:configs": "bash scripts/sync-configs.sh"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint/js": "^9.36.0",
    "@ls-lint/ls-lint": "^2.3.1",
    "@secretlint/secretlint-rule-preset-recommend": "^9.3.4",
    "@textlint/types": "^14.8.4",
    "@types/node": "^22.18.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
